<header id="header" role="header">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">乐活生活馆</a>
      </div>
      <div class="collapse navbar-collapse" id="myNavbar">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to("首页", root_path) %>
          </li>
          <li class="dropdown pro-drop">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= link_to("产品", products_path) %>
              <b class="caret"></b>
            </a>
            <ul class="hover-pro">
              <% Category.all.each do |category| %>
                <li>
                  <%= link_to(category.name, products_path(category: category.name)) %>
                </li>
              <% end %>
            </ul>
          </li>
          <li>
            <%= link_to("关于我们", "#") %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to carts_path do %>
              购物车 <i class="fa fa-shopping-cart fa-lg"></i> (<%= current_cart.products.count %>)
            <% end %>
          </li>
          <% if !current_user %>
            <li>
              <div class="login">
                <%= link_to("注册", new_user_registration_path) %> |
                <%= link_to("登录", new_user_session_path) %>
              </div>
            </li>
          <% else %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <% if current_user.nickname.present? %>
                  Hi, <%= current_user.nickname %>!
                <% else %>
                  Hi, <%= current_user.email %>!
                <% end %>
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <% if current_user.admin? %>
                  <li>
                    <%= link_to(content_tag(:i, " Admin Panel", class: "fa fa-lock"), admin_products_path) %>
                  </li>
                <% end %>
                <li>
                  <%= link_to(content_tag(:i, " My Orders", class: "fa fa-history"), account_orders_path) %>
                </li>
                <li><%= link_to(content_tag(:i, " Edit Profile", class: "fa fa-pencil-square-o"),edit_user_registration_path) %></li>
                <li>
                  <%= link_to(content_tag(:i, " Sign Out", class: "fa fa-sign-out"), destroy_user_session_path, method: :delete) %>
                </li>
              </ul>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
  <div class="row">
    <div class="col-md-4 col-md-offset-2 col-sm-4 col-sm-offset-2 col-xs-6">
      <div class="slogan">
        <h2>
          欢迎来到乐活生活馆
        </h2>
        <h2>
          ——好物尽在这里
        </h2>
        <h2>
          ——随便逛逛, <%= link_to("点这里", products_path) %>
        </h2>
      </div>
    </div>
    <div class="col-md-4 col-sm-4 col-xs-6">
      <div class="picture">
        <%= image_tag "pic4.jpg", class: "img-circle" %>
      </div>
    </div>
  </div>
</header>

<div id="products">
  <div class="wrapper1">
    <div class="row">
      <div class="col-lg-10 col-lg-offset-1 col-md-10 col-md-offset-1 col-sm-10 col-sm-offset-1">
        <!-- Search area -->
        <%= form_tag search_products_path , :method => :get, :class => "search-container" do %>
          <input type="text", id="search-bar", name="q" value="<%= params[:q] %>" placeholder="产品，描述...">
          <button type="submit" class="search-icon">
            <span class="fa fa-search fa-2x"></span>
          </button>
        <% end %>
        <!-- End Search -->

        <h2 class="text-center">热销商品</h2>
        <div class="row hot-products">
          <% Product.all.each do |product| %>
          <div class="col-md-6 col-sm-12">
            <figure class="snip1423">
              <%= link_to product_path(product) do %>
                <% if product.photos.present? %>
                  <%= image_tag(product.photos[0].image.url) %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic") %>
                <% end %>
              <% end %>
              <figcaption>
                <h3><%= link_to(product.title, product_path(product)) %> <span>￥<%= product.price %></span></h3>
                <p>
                  已成交多少单
                  <% if product.quantity.present? && product.quantity > 0 %>
                    <%= link_to(content_tag(:i, "", class: "fa fa-shopping-cart fa-2x"), add_to_cart_product_path(product), :method => :post) %>
                  <% else %>
                    已售馨
                  <% end %>
                  <i class="sub">2</i>
                  <i class="fa fa-heart-o fa-2x"><a></a></i>
                </p>
              </figcaption>
            </figure>
          </div>
          <% end %>
        </div>


        <h2 class="text-center">精选商品</h2>
        <div class="row specific-products">
          <% Product.all.each do |product| %>
          <div class="col-md-6 col-sm-12">
            <figure class="snip1423">
              <%= link_to product_path(product) do %>
                <% if product.photos.present? %>
                  <%= image_tag(product.photos[0].image.url) %>
                <% else %>
                  <%= image_tag("http://placehold.it/200x200&text=No Pic") %>
                <% end %>
              <% end %>
              <figcaption>
                <h3><%= link_to(product.title, product_path(product)) %> <span>￥<%= product.price %></span></h3>
                <p>
                  已成交多少单
                  <% if product.quantity.present? && product.quantity > 0 %>
                    <%= link_to(content_tag(:i, "", class: "fa fa-shopping-cart fa-2x"), add_to_cart_product_path(product), :method => :post) %>
                  <% else %>
                    已售馨
                  <% end %>
                  <i class="sub">2</i>
                  <i class="fa fa-heart-o fa-2x"></i>
                </p>
              </figcaption>
            </figure>
          </div>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
