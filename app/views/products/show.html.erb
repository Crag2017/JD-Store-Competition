<div class="row">
  <div class="col-md-6">
    <% if @photos.present? %>
      <% @photos.each_with_index do |p, index| %>
        <% if index == 0 %>
          <%= image_tag p.image.medium.url %>
        <% else %>
          <%= image_tag p.image.thumb.url %>
        <% end %>
      <% end %>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2><%= @product.title %></h2>
    <div class="rating">
      <div class="star-rating" data-score= <%= @avg_review %> ></div>
    <em><%= "#{@reviews.length} reviews" %></em>
    <div style="height: 100px;">
      <p>
        <%= @product.description %>
      </p>
    </div>
    <div>Quantity: <%= @product.quantity %></div>
    <div>Price: ￥ <%= @product.price %></div>
    <div>
      <% if !current_user.is_fan_of?(@product) %>
				<%= link_to favorite_product_path(@product), :class => "like btn btn-default",method: :post do %>
					<i class="fa fa-heart"></i>
				<% end %>
			<% else %>
				<%= link_to unfavorite_product_path(@product), :class => "like btn btn-default",method: :post do %>
					<i class="fa fa-heart" style="color:red;"></i>
				<% end %>
			<% end %>
    </div>
    <div class="pull-right">
      <% if @product.quantity.present? && @product.quantity > 0 %>
        <%= link_to("Add to Cart", add_to_cart_product_path(@product), :method => :post, class: "btn btn-danger btn-lg") %>
      <% else %>
        已销售一空，无法购买
      <% end %>
    </div>
  </div>
</div>


<div class="row" style="margin-top:20;">
  <div class="col-md-12">
    <div class="tabbable-panel">
 	   <div class="tabbable-line">
    	  <ul class="nav nav-tabs ">
    	    <li class="active">
    		   <a href="#tab_default_1" data-toggle="tab">Tab 1 </a>
    	    </li>
    		<li>
    		  <a href="#tab_default_2" data-toggle="tab">Tab 2 </a>
    		</li>
    	  </ul>
    	</div>
    	<div class="tab-content">
    	  <div class="tab-pane active" id="tab_default_1">
    	    <p>I'm in Tab 1.</p>
    	  </div>
    	  <div class="tab-pane" id="tab_default_2">
    	    <%= simple_form_for([@product, @review]) do |f| %>
			   <div class="form-inputs">
				  <div id="star-rating"></div>
				  <%= f.input :comment %>
				</div>
				<div class="form-actions">
				  <%= f.button :submit %>
				</div>
			<% end %>
			<% if @reviews.blank? %>
			  <h3>这个宝贝还没有人评论，来为它添加一个吧！</h3>
			<% else %>
			  <% @reviews.each do |review| %>
			    <div class="reviews">
			      <ul class="list-group">
			        <li class="list-group-item">
			          <div class="row">
			            <div class="col-md-1">
			              <div class="round-image-50"><%= image_tag(review.user.avatar.url(:thumb))%></div>
			              <p><%= review.user.nickname %></p>
			            </div>
			            <div class="col-md-8">
			              <div class="star-rating" data-score= <%= review.rating %> ></div>
			              <p><%= review.comment %></p>
			            </div>
			          </div>
			        </li>
			      </ul>
			    </div>
			  <% end %>
			<% end %>
		  </div>
	   </div>
	 </div>
  </div>
 </div>
</div>
<script>
  $('.star-rating').raty({
	  path: '/assets/',
		readOnly: true,
		score: function() {
			return $(this).attr('data-score');
		}
	 });
	$('#star-rating').raty({
		path: '/assets/',
		scoreName: 'review[rating]'
		});
</script>
