
<div class=" col-md-4 col-xs-6 box">
  <div class="image">
    <%= link_to product_path(product) do %>
      <% if product.photos.present? %>
        <%= image_tag(product.photos[0].image.url) %>
      <% else %>
        <%= image_tag("http://placehold.it/200x200&text=No Pic") %>
      <% end %>
    <% end %>
  </div>

  <div class="fig">
    <p class="actions">

      <% if product.quantity.present? && product.quantity > 0 %>
        <%= link_to("去看看", product_path(product), class: "add-to-cart btn", style: "height:26px;font-size:11px;background-color:#72dfad;", :method => :get) %>
      <% else %>
        已售馨
      <% end %>

      <% if product.quantity.present? && product.quantity > 0 %>
        <%= link_to("加入购物车", add_to_cart_product_path(product), class: "add-to-cart btn ", style: "height:26px;font-size:11px;border-color:#72dfad;background-color:#fff;color:#72dfad; ", :method => :post) %>
      <% else %>
        已销售一空，无法购买
      <% end %>

      <% if user_signed_in? %>
        <% if !current_user.is_fan_of?(product) %>
          <%= link_to favorite_product_path(product), :class => "like btn btn-default", style: "height:26px;font-size:11px;border-color:#72dfad;background-color:#72dfad; ", method: :post do %>
            <i class="fa fa-heart fa-lg", style="border-color:#fff;color:#fff;"></i>
          <% end %>
        <% else %>
          <%= link_to unfavorite_product_path(product), :class => "like btn btn-default",style: "height:26px;font-size:11px;border-color:#72dfad; ", method: :post do %>
            <i class="fa fa-heart fa-lg", style="color:#72dfad;"></i>
          <% end %>
        <% end %>
      <% else %>
